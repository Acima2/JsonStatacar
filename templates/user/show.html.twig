{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}
{% block menu %} {{ include('menuAdmin.html.twig') }}{% endblock %}
{% block body %}
    <h1>Utilisateur {{ user.prenom ~ ' '~ user.nom }}</h1>
    <img src="{{ user.imageFile }}" alt="avatar">

    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Date_embauche</th>
                <td>{{ user.dateEmbauche ? user.dateEmbauche|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Ecole</th>
                <td>{{ user.ecole }}</td>
            </tr>
            <tr>
                <th>Permis_valide</th>
                <td>{{ user.permisValide ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ActiveDeplacement</th>
                <td>{{ user.activeDeplacement ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
