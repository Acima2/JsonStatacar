{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}
{% block menu %} {{ include('menuAdmin.html.twig') }}{% endblock %}
{% block body %}
    <h1>Vehicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ vehicule.nom }}</td>
            </tr>
            <tr>
                <th>Immatriculation</th>
                <td>{{ vehicule.immatriculation }}</td>
            </tr>
            <tr>
                <th>Modele</th>
                <td>{{ vehicule.modele }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque }}</td>
            </tr>
            <tr>
                <th>Date d'achat</th>
                <td>{{ vehicule.dateAchat ? vehicule.dateAchat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Responsable clé</th>
                <td>{{ vehicule.responsableCle }}</td>
            </tr>
            <tr>
                <th>Responsable entretien</th>
                <td>{{ vehicule.responsableEntretien }}</td>
            </tr>
            <tr>
                <th>Photo vehicule</th>
                <td>{{ vehicule.photoVehicule? vehicule.photoVehicule : 'N.A' }}</td>
            </tr>
            <tr>
                <th>Kilométrage actuel</th>
                <td>{{ kilometrage }} Km</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vehicule_index') }}">back to list</a>

    <a href="{{ path('vehicule_edit', {'id': vehicule.id}) }}">edit</a>

    {{ include('vehicule/_delete_form.html.twig') }}
{% endblock %}
