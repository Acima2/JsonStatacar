{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container loginForm">
        <form action="{{ path('login') }}" method="post" class="form-group row">

            <div class="form-group col-md-12 loginFields">
                <label for="username" class="offset-1 col-md-2 loginLabel">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="col-md-6" placeholder="france@eni.fr"/>

            </div>
            <div class="form-group col-md-12 loginFields">
                <label for="password" class="offset-1 col-md-2 loginLabel">Mot de passe:</label>
                <input type="password" id="password" name="_password" class="col-md-6" placeholder="Snoupi"/>
            </div>


            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}

            <button type="submit" class="btn btn-dark offset-5 col-md-2">Se connecter</button>
        </form>
    </div>


{% endblock %}
